<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-key fa-6x my-3"></i>
    <p class="secret-text">ADD ITEMS</p>
    <form action="/submit" method="POST">
      <div class="form-group">
        <input type="text" class="form-control text-center" name="name" placeholder="Enter Your Product">
        <input type="number" class="form-control text-center my-3" name="price" placeholder="Enter price for your Product">
      </div class="my-3">
      <div>
        <h4>Categories</h4>
          <input class="form-check-input" type="radio" name="category" id="exampleRadios1" value="electronics" checked>
          <label class="form-check-label" for="exampleRadios1">
            Electronics
          </label>
          <input class="form-check-input ml-2" type="radio" name="category" id="exampleRadios2" value="clothing">
          <label class="form-check-label ml-4" for="exampleRadios2">
            Clothes
          </label>
    </div>
      <button type="submit" class="btn btn-dark my-2">Submit</button>
    </form>


  </div>
</div>
